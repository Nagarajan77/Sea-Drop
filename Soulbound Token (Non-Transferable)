pragma solidity ^0.8.20;

import "@openzeppelin/contracts/token/ERC721/ERC721.sol";
import "@openzeppelin/contracts/token/ERC721/extensions/ERC721Burnable.sol";
import "@openzeppelin/contracts/access/Ownable.sol";

contract SoulboundNFT is ERC721, ERC721Burnable, Ownable {
    constructor(address initialOwner) ERC721("Soulbound", "SBT") Ownable(initialOwner) {}

    function safeMint(address to, uint256 tokenId) public onlyOwner {
        _safeMint(to, tokenId);
    }

    // Block transfers by overriding _update (OpenZeppelin v5)
    // Allows minting (from 0) and burning (to 0), but not transfers between users
    function _update(address to, uint256 tokenId, address auth) internal override returns (address) {
        address from = _ownerOf(tokenId);
        if (from != address(0) && to != address(0)) {
            revert("Soulbound: Transfer failed, token is non-transferable");
        }
        return super._update(to, tokenId, auth);
    }
}
